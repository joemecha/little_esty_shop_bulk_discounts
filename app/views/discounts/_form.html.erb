<%= form_with model: model, method: method, url: url, class: 'merchant_discount_form', local: true do |f| %>
  <%= f.label :name, "Discount Name" %>
  <%= f.text_field :name %><br/><br/>
  <%= f.label :percentage_discount, "Percentage Discount" %>
  <%= f.text_field :percentage_discount %><br/><br/>
  <%= f.label :quantity_threshold, "Quantity Threshold" %>
  <%= f.text_field :quantity_threshold %><br/><br/>
  <%= f.submit 'Submit'%>
<% end %>
