<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path(@merchant), class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Items', merchant_items_path(@merchant), class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Invoices', merchant_invoices_path(@merchant), class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Discounts', merchant_discounts_path(@merchant), class: 'link_1', style: 'pull-right' %>
    </ul>
  </nav>
</div>

<body>
  <div class="row">
    <h2 class='col-12'>My Bulk Discounts</h2>
  </div>

  <ul class='mr-auto col-sm-4'>
    <section id="discounts">
      <% @discounts.each do |discount| %>
        <section id="item-<%= discount.id %>">
          <li>Discount Name: <%= link_to "#{discount.name}", merchant_discount_path(@merchant, discount) %></li>
          <li>Percentage Discount: <%= discount.percentage_discount %></li>
          <li>Percentage Discount: <%= discount.quantity_threshold %></li>
        </section>
      <% end %>
    </section>
  </ul>
