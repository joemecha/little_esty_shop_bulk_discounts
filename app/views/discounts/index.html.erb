<%= render partial: 'navbar' %>

<body>
  <div class="row">
    <h2 class='col-12'>My Bulk Discounts</h2>
  </div>

  <p><%= link_to "Create New Discount", new_merchant_discount_path(@merchant) %></p>

  <ul class='mr-auto col-sm-4'>
    <section id="discounts">
      <% @discounts.each do |discount| %>
        <section id="discount-<%= discount.id %>">
          <li>Discount Name: <%= link_to "#{discount.name}", merchant_discount_path(@merchant, discount) %>
            <%= button_to "Delete", merchant_discount_path(@merchant.id, discount.id), params: {discount_id: "#{discount.id}"}, method: :delete %></li>
          <li>Percentage Discount: <%= discount.percentage_discount %>%</li>
          <li>Quantity Threshold: <%= discount.quantity_threshold %></li>
        </section>
      <% end %>
    </section>
  </ul>

  <ul class='mr-auto col-sm-4'>
    <section id="upcoming-holidays">
      <h3>Next Three US Public Holidays</h3>
      <% @holidays.next_three_holidays.each do |holiday| %>
          <li>
            <%= holiday[:localName] %>
            <%= holiday[:date] %>
          </li>
      <% end %>
    </section>
  </ul>
